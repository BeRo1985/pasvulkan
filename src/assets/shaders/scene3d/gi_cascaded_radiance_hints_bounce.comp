vec4 random(ivec4 p){
  const uint k = 1103515245u;
  uvec4 v = uvec4(p); 
  v = ((v >> 8u) ^ v.ywzx) * k;
  v = ((v >> 8u) ^ v.ywzx) * k;
  v = ((v >> 8u) ^ v.ywzx) * k;
  v = ((v >> 8u) ^ v.ywzx) * k;
  return vec4(uintBitsToFloat(uvec4(uvec4(((v >> 9u) & uvec4(0x007fffffu)) | uvec4(0x3f800000u))))) - vec4(1.0);
}

